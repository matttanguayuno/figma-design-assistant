{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@figma"
    ]
  },
  "include": [
    "shared/**/*.ts",
    "figma-plugin/**/*.ts",
    "backend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
